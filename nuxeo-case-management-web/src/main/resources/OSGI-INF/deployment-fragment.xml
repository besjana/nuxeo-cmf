<?xml version="1.0"?>

<fragment>

  <extension target="application#MODULE">

    <module>
      <java>${bundle.fileName}</java>
    </module>

  </extension>

  <extension target="faces-config#NAVIGATION">

    <navigation-case>
      <from-outcome>casefolder_view</from-outcome>
      <to-view-id>/casemanagement/casefolder/casefolder_view.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>casefolder_manage</from-outcome>
      <to-view-id>/casemanagement/casefolder/casefolder_manage.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <from-outcome>casefolder_create</from-outcome>
      <to-view-id>/casemanagement/casefolder/casefolder_create.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <from-outcome>distribution_casemanagement_case</from-outcome>
      <to-view-id>
        /casemanagement/mail/distribution_casemanagement_case.xhtml
      </to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>create_casemanagement_document</from-outcome>
      <to-view-id>
        /casemanagement/mail/create_casemanagement_document.xhtml
      </to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <from-outcome>view_casemanagement_case</from-outcome>
      <to-view-id>
        /casemanagement/mail/view_casemanagement_case.xhtml
      </to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <from-outcome>edit_case</from-outcome>
      <to-view-id>
        /casemanagement/caseitem/caseitem_edit.xhtml
      </to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <from-outcome>distribution_caselink</from-outcome>
      <to-view-id>
        /casemanagement/caseitem/caseitem_distribution.xhtml
      </to-view-id>
      <redirect />
   </navigation-case>
    

    <navigation-case>
      <from-outcome>view_casemanagement_document</from-outcome>
      <to-view-id>
        /casemanagement/case/view_casemanagement_document.xhtml
      </to-view-id>
      <redirect />
    </navigation-case>
    
  </extension>

  <install>

    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

  </install>

</fragment>

