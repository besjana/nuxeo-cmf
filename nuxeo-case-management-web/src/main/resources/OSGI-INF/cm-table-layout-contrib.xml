<?xml version="1.0"?>

<component name="com.nuxeo.cm.table.layout">

  <require>com.nuxeo.cm.table.widget</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">
    <layout name="cm_inbox_caselink">
      <templates>
        <template mode="any">/layouts/layout_listing_template.xhtml</template>
      </templates>
      <properties mode="any">
        <property name="showListingHeader">true</property>
        <property name="showRowEvenOddClass">true</property>
      </properties>
      <columns>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">false</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_icon_type</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
            <property name="sortPropertyName">dc:title</property>
          </properties>
          <widget>cm_mailbox_inbox_listing_title_link</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_listing_sending_date</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_listing_sender</widget>
        </column>
      </columns>
    </layout>
    
     <layout name="cm_draft_caselink">
      <templates>
        <template mode="any">/layouts/layout_listing_template.xhtml</template>
      </templates>
      <properties mode="any">
        <property name="showListingHeader">true</property>
        <property name="showRowEvenOddClass">true</property>
      </properties>
      <columns>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">false</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_icon_type</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
            <property name="sortPropertyName">dc:title</property>
          </properties>
          <widget>cm_mailbox_draft_listing_title_link</widget>
        </column>
      </columns>
    </layout>

    <layout name="cm_sent_caselink">
      <templates>
        <template mode="any">/layouts/layout_listing_template.xhtml</template>
      </templates>
      <properties mode="any">
        <property name="showListingHeader">true</property>
        <property name="showRowEvenOddClass">true</property>
      </properties>
      <columns>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">false</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_icon_type</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
            <property name="sortPropertyName">uid:uid</property>
          </properties>
          <widget>cm_listing_uid</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
            <property name="sortPropertyName">dc:title</property>
          </properties>
          <widget>cm_mailbox_listing_title_link</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_listing_sender</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>cm_listing_sending_date</widget>
        </column>
      </columns>
    </layout>

  </extension>

</component>
