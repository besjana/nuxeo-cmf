<?xml version="1.0"?>
<component name="org.nuxeo.cm.core.routing.listeners">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
    point="listener">
    <listener name="initiatorRoutingListener" async="false"
      postCommit="false" class="org.nuxeo.cm.core.event.RoutingInitiatorListener"
      priority="120">
      <event>beforeRouteReady</event>
    </listener>
    <!-- needs to go after the distribution listener -->
    <listener name="routeSecurityUpdaterListener" async="false"
      postCommit="false" class="org.nuxeo.cm.core.event.RouteSecurityUpdaterListener"
      priority="250">
      <event>afterCaseSentEvent</event>
    </listener>
  </extension>

</component>
