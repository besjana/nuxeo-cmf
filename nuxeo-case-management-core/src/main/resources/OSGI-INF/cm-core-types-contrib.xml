<?xml version="1.0"?>

<component name="org.nuxeo.cm.schemas">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService"
    point="schema">

    <schema name="base" src="schemas/base.xsd" />

    <schema name="distribution" src="schemas/distribution.xsd"
      prefix="cmdist" />

    <schema name="case_item" src="schemas/case_item.xsd"
      prefix="cmdoc" />

    <schema name="case" src="schemas/case.xsd"
      prefix="case" />

    <schema name="case_link" src="schemas/case_link.xsd"
      prefix="cslk" />

    <schema name="case_folder" src="schemas/case_folder.xsd"
      prefix="csfd" />

    <schema name="contact" src="schemas/contact.xsd"
      prefix="cmct" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService"
    point="doctype">

    <doctype name="CaseFolderRoot" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <facet name="Folderish" />
      <facet name="SuperSpace" />
    </doctype>

    <doctype name="CaseRoot" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <facet name="Folderish" />
      <facet name="SuperSpace" />
    </doctype>

    <doctype name="CaseItem" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="distribution" />
      <schema name="case_item" />
      <schema name="contact" />
      <schema name="uid" />
      <schema name="file" />
      <schema name="files" />
      <facet name="CaseItem" />
      <facet name="Commentable" />
    </doctype>

    <doctype name="Case" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="distribution" />
      <schema name="case" />
      <facet name="Case" />
      <facet name="Commentable" />
    </doctype>

    <doctype name="CaseFolder" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="distribution" />
      <schema name="case_folder" />
      <facet name="Folderish" />
      <facet name="CaseFolder" />
    </doctype>

    <doctype name="CaseLink" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="uid" />
      <schema name="contact" />
      <schema name="distribution" />
      <schema name="case_link" />
      <facet name="CaseLink" />
    </doctype>

  </extension>
</component>
